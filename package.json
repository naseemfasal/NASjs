{
  "name": "nasjs",
  "version": "1.3.0",
  "description": "Modern DatePicker (jQuery UI alternative), TimePicker, Event Calendar, Image Gallery, Modal & Confirmation Popup (SweetAlert alternative) - Zero dependencies, lightweight UI components for vanilla JS, React, Vue, Angular",
  "main": "dist/nasjs.min.js",
  "style": "dist/nasjs.min.css",
  "types": "dist/nasjs.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "node build.js",
    "build:pro": "npm run build:js && npm run build:css",
    "build:js": "terser src/nasjs.js -o dist/nasjs.min.js -c -m",
    "build:css": "cleancss -o dist/nasjs.min.css src/nasjs.css",
    "serve": "npx http-server -p 8080",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/naseemfasal/NASjs.git"
  },
  "keywords": [
    "datepicker",
    "timepicker",
    "calendar",
    "event-calendar",
    "image-gallery",
    "lightbox",
    "modal",
    "popup",
    "confirm",
    "sweetalert-alternative",
    "jquery-ui-alternative",
    "vanilla-js",
    "javascript",
    "framework-agnostic",
    "lightweight",
    "responsive",
    "dark-mode",
    "accessible",
    "ui-components",
    "nasjs",
    "no-dependencies",
    "react",
    "react-datepicker",
    "react-calendar",
    "react-modal",
    "react-gallery",
    "vue",
    "vue-datepicker",
    "vue-calendar",
    "angular",
    "angular-datepicker",
    "typescript"
  ],
  "author": "Naseem Fasal Palappetty",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/naseemfasal/NASjs/issues"
  },
  "homepage": "https://naseemfasal.github.io/NASjs/",
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "terser": "^5.44.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead"
  ]
}
